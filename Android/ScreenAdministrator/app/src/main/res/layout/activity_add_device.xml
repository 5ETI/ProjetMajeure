<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projetmajeur.screenadministrator.activity.AddDeviceActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/orientation"
        android:hint="Orientation"
        android:background="@drawable/border"
        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/longueur"
        android:hint="Length"
        android:background="@drawable/border"
        android:layout_below="@+id/orientation"
        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/hauteur"
        android:hint="Height"
        android:background="@drawable/border"
        android:layout_below="@+id/longueur"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/latitude"
        android:hint="Latitude"
        android:background="@drawable/border"
        android:layout_below="@+id/hauteur"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
     />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/longitude"
        android:hint="Longitude"
        android:background="@drawable/border"
        android:layout_below="@+id/latitude"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ville"
        android:hint="City"
        android:background="@drawable/border"
        android:layout_below="@+id/longitude"
        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/type"
        android:hint="Type"
        android:background="@drawable/border"
        android:layout_below="@+id/ville"
        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15pt"
        android:layout_marginBottom="10pt"
        android:layout_height="40pt"
        android:text="@string/AddDevice"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/button_bg_round"
        android:layout_width="40pt"
        android:layout_weight="0.04" />

    <Button
        android:id="@+id/button_geo"

        android:layout_alignParentRight="true"
        android:layout_marginRight="15pt"
        android:layout_marginTop="10pt"
        android:layout_marginBottom="5pt"
        android:layout_height="30pt"
        android:layout_below="@id/hauteur"
        android:layout_above="@id/ville"
        android:text="GEO"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/button_bg_round"
        android:layout_width="30pt"
        android:layout_weight="0.04" />


</RelativeLayout>
