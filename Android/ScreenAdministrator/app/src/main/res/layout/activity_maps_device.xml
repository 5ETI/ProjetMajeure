
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/identifiant"
        android:layout_width="wrap_content"
        android:layout_height="10pt"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/orientation"
        android:layout_width="wrap_content"
        android:layout_height="10pt"
        android:layout_above="@+id/identifiant"
        />
    <TextView
        android:id="@+id/longueur"
        android:layout_width="wrap_content"
        android:layout_height="10pt"
        android:layout_above="@+id/orientation"
        />
    <TextView
        android:id="@+id/hauteur"
        android:layout_width="wrap_content"
        android:layout_height="10pt"
        android:layout_above="@+id/longueur"

        />
    <TextView
    android:id="@+id/longitude"
    android:layout_width="wrap_content"
    android:layout_height="10pt"
    android:layout_above="@+id/hauteur"

    />
    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="10pt"
        android:layout_above="@+id/longitude"

        />

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/latitude"
    tools:context="projetmajeur.screenadministrator.activity.MapsDeviceActivity" />

</RelativeLayout>